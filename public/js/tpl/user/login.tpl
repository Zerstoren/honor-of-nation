<div class="auth__block" ng-show="showForm">
    <h1>Авторизация</h1>
    <div class="auth">
        <div>
            <input
                type="text"
                placeholder="Логин"
                class="auth__input_login"
            />
        </div>
        <div>
            <input
                type="password"
                placeholder="Пароль"
                class="auth__input_password"
            />
        </div>

        <div>
            <button type="button" class="btn auth__button">Авторизироваться</button>
        </div>
    </div>
</div>